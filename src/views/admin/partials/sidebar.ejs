<!-- Sidebar -->
<aside class="sidebar">
  <div class="sidebar-logo">
    <h1>
    <%= auth ? `Hi, ${auth.name}`: "Admin Dashboard" %>
    </h1>
  </div>

  <nav class="sidebar-menu">
    <% for(let item of sidebarItems){ %>
    <a href="/admin<%= item.path %>" class="menu-item <%= item.path === path ? "active" : "" %>">
      <i class="fas <%= item.icon %>"></i>
      <%= item.title %>
    </a>
    <% } %>
  </nav>

  <div class="user-profile" id="userProfileDropdown">
    <div class="avatar">JD</div>
    <div class="user-info">
      <p>John Doe</p>
      <small>Administrator</small>
    </div>
    <i class="fas fa-chevron-down dropdown-icon"></i>
    <div class="user-dropdown">
      <a href="/admin/accountSettings" class="dropdown-item">
        <i class="fas fa-user-cog"></i> Account Settings
      </a>
      <form method="POST" action="/admin/auth/logout?_method=DELETE">
        <button type="submit" style="border: none;background-color: transparent; padding: 10px   ;" class="dropdown-item">
          <i class="fas fa-sign-out-alt"></i> Logout
        </button> 
      </form>
    </div>
  </div>
</aside>
