<div class="app-container">
  <!-- Main Content -->
  <main class="content-wrapper">
    <div class="content-header">
      <h1>User Detail</h1>
      <div>
        <a href="/admin/users" class="btn btn-secondary" id="backButton">
          <i class="fas fa-arrow-left"></i> Back
        </a>
        <a
          href="/admin/users/<%= user.id%>/edit"
          class="btn btn-primary"
          id="editButton"
        >
          <i class="fas fa-edit"></i> Edit
        </a>
      </div>
    </div>

    <!-- User Details Container -->
    <div
      class="detail-header"
      style="display: flex; align-items: center; margin-bottom: 20px"
    >
      <div class="avatar" style="width: 64px; height: 64px; font-size: 24px">
        <%= user.name%>
      </div>
      <div style="margin-left: 20px">
        <h2 style="margin: 0"><%= user.name %></h2>
        <p style="margin: 5px 0; color: #666"><%= user.username %></p>
        <span class="badge <%= user.status === "active" ? "badge-success" :(user.status === "inactive" ? "badge-danger" : "badge-warning") %>"><%= user.status %></span>
        <span
          class="badge"
          style="background-color: rgba(58, 134, 255, 0.1); color: #3a86ff"
          ><%= user.role %></span
        >
      </div>
    </div>

    <div class="detail-section">
      <h3>Contact Information</h3>
      <table class="detail-table">
        <tr>
          <td><strong>Email:</strong></td>
          <td><%= user.email?? "Chưa cập nhật" %></td>
        </tr>
        <tr>
          <td><strong>Phone:</strong></td>
          <td><%= user.phone?? "Chưa cập nhật" %></td>
        </tr>
        <tr>
          <td><strong>Address:</strong></td>
          <td><%= user.address?? "Chưa cập nhật" %></td>
        </tr>
      </table>
    </div>

    <div class="detail-section">
      <h3>Account Information</h3>
      <table class="detail-table">
        <tr>
          <td><strong>Username:</strong></td>
          <td><%= user.username?? "Chưa cập nhật" %></td>
        </tr>
        <tr>
          <td><strong>Role:</strong></td>
          <td><%= user.role?? "Chưa cập nhật" %></td>
        </tr>
        <tr>
          <td><strong>Status:</strong></td>
          <td><%= user.status?? "Chưa cập nhật" %></td>
        </tr>
        <tr>
          <td><strong>Date Created:</strong></td>
          <td>
            <%= user.created_at? new
            Date(user.created_at).toLocaleDateString('vi-VN'): "Chưa cập nhật"
            %>
          </td>
        </tr>
        <tr>
          <td><strong>Birthday:</strong></td>
          <td><%= user.birthday?? "Chưa cập nhật" %></td>
        </tr>
      </table>
    </div>
  </main>
</div>

<script src="/assets/js/common.js"></script>

<style>
  /* Additional styles for the detail page */
  .detail-section {
    margin-bottom: 30px;
  }

  .detail-section h3 {
    font-size: 18px;
    color: #333;
    margin-bottom: 15px;
    padding-bottom: 10px;
    border-bottom: 1px solid #eee;
  }

  .detail-table {
    width: 100%;
    border-collapse: collapse;
  }

  .detail-table td {
    padding: 10px 0;
    border-bottom: 1px solid #f5f5f5;
  }

  .detail-table td:first-child {
    width: 150px;
    color: #666;
  }

  .activity-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .loading-spinner {
    text-align: center;
    padding: 40px;
    color: #666;
  }
</style>
